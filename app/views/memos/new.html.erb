<h5>memo.create</h5>

<%= form_tag('/create') do %>

<%=label_tag "form-title", "Title"%>
<%=text_field :memos, :title, class:"form-control",placeholder:"title"%>

<%=label_tag "form-title", "body"%>
<%=text_area :memos, :body,class:"form-control",size: "50x40",wrap:"hard",placeholder:"body"%>


<%=label_tag "form-category" , "Category" %>
<%=select_tag "memos[category_id]",options_from_collection_for_select(@categories, "id", "name"),class:"form-control"%>

<%=submit_tag "Create", class: "btn btn-primary"%>
<%end%>

<%= form_for :post, url: '/post'  do |f| %>
  <p><%=f.label "画像をアップロード" %><br><%= f.file_field :image %></p>
  <p><%= f.submit value: '投稿',class:"btn btn-primary" %></p>
<% end %>
